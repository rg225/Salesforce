<apex:page >
    <head>
        <script src="../../soap/ajax/42.0/connection.js" type="text/javascript"></script>
        <script>
        var records =  '{!$CurrentPage.parameters.recs}';
        recordsIds = records.split(',');
        function continueStudent(){ 
            sforce.connection.sessionId= "{!$Api.Session_ID}";
            var delResult = sforce.connection.deleteIds(recordsIds);
            if (delResult[0].getBoolean("success")) {
                alert("Students are deleted");
            } else {
                alert("Students are failed to delete");
            }
            window.close();
            window.opener.location.href = '/a00/o';
        }
        function cancelStudent(){
            window.opener.location.href = '/a00/o';
            window.close();
            }    
        </script>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>Add Student In This Class</title>
        <!-- Import the Design System style sheet -->
        <apex:slds />
    </head>
    <body>
        <apex:form >
        <apex:commandButton value="Continue" onclick="continueStudent();" />
        <apex:commandButton value="Cancel" onclick="return cancelStudent();" />
    </apex:form>
    </body>
</apex:page>